<mapping>
    <class name="com.dt.xlb.test2.SimpleBean">

        <map-to xml="simplebean"/>
        <field name="user" type="com.dt.xlb.test2.User">
            <bind-xml name="user" node="element" location="book"/>
            <field name="age" type="integer">
                <bind-xml name="age" node="element"/>
            </field>
            <field name="name" type="string">
                <bind-xml name="name" node="element"/>
            </field>
        </field>
        <field name="jobDescription" type="string">
            <bind-xml name="jobDescription" node="element" location="book"/>
        </field>
    </class>
</mapping>